<Window x:Class="PacketSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PacketSender"
        mc:Ignorable="d"
        Title="Packet Sender" Height="900" Width="1200">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="300" MinHeight="150"/>
        </Grid.RowDefinitions>

        <!-- 패킷 목록 (왼쪽) -->
        <DockPanel Grid.Row="0" Grid.Column="0">
            <TextBlock DockPanel.Dock="Top" Text="Packet List" FontWeight="Bold" Margin="5" FontSize="14"/>

            <!-- 검색 박스 -->
            <Border DockPanel.Dock="Top" BorderBrush="Gray" BorderThickness="1" Margin="5,0,5,5" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchTextBox" 
                             Grid.Column="0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalAlignment="Center"
                             Padding="5,3"/>
                    <TextBlock Grid.Column="0" 
                               Text="Search packets..." 
                               Foreground="Gray" 
                               IsHitTestVisible="False" 
                               VerticalAlignment="Center"
                               Margin="8,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Button Grid.Column="1" 
                            Content="✕" 
                            Width="20" 
                            Height="20" 
                            Margin="3,0,0,0"
                            Background="Transparent"
                            BorderThickness="0"
                            FontSize="10"
                            Command="{Binding ClearSearchCommand}"
                            ToolTip="Clear search">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Text, ElementName=SearchTextBox}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <Border BorderBrush="Gray" BorderThickness="1" Margin="5,0,5,5">
                <ListBox x:Name="PacketListBox" 
                         ItemsSource="{Binding FilteredPackets}"
                         SelectedItem="{Binding SelectedPacket}"
                         DisplayMemberPath="PacketName"
                         ScrollViewer.VerticalScrollBarVisibility="Auto">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="Margin" Value="1"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>
        </DockPanel>

        <!-- 구분선 -->
        <GridSplitter Grid.Row="0" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>

        <!-- 패킷 상세 정보 (오른쪽) -->
        <DockPanel Grid.Row="0" Grid.Column="2">
            <TextBlock DockPanel.Dock="Top" Text="Packet Instance" FontWeight="Bold" Margin="5" FontSize="14"/>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!-- 패킷이 선택되지 않았을 때 -->
                        <TextBlock x:Name="NoSelectionText" 
                                   Text="Select a packet to create instance" 
                                   FontStyle="Italic" 
                                   Foreground="Gray"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="20">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedPacket}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <!-- 패킷이 선택되었을 때 -->
                        <StackPanel x:Name="PacketInstancePanel" DataContext="{Binding PacketInstance}">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding DataContext.SelectedPacket, RelativeSource={RelativeSource AncestorType=Window}}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <!-- 패킷 정보 (읽기 전용) -->
                            <Grid Margin="0,0,0,15">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Packet Name: " FontWeight="Bold" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PacketName}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Type: " FontWeight="Bold" Margin="0,0,10,5"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,5">
                                    <TextBlock Text="{Binding PacketType}"/>
                                    <TextBlock Text=" (Read Only)" Foreground="Orange" FontWeight="Bold" Margin="10,0,0,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding PacketType}" Value="ReplyPacket">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Description: " FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Top"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Description}" Value="">
                                                    <Setter Property="Text" Value="No description available"/>
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Description}" Value="{x:Null}">
                                                    <Setter Property="Text" Value="No description available"/>
                                                    <Setter Property="FontStyle" Value="Italic"/>
                                                    <Setter Property="Foreground" Value="Gray"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                            <!-- 필드 값 입력 영역 -->
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="Field Values:" FontWeight="Bold"/>
                                    <Button Grid.Column="1" Content="Clear All" 
                                            Command="{Binding ClearFieldsCommand}" 
                                            Padding="8,3" 
                                            Margin="0,0,5,0"
                                            FontSize="11"/>
                                    <Button Grid.Column="2" Content="Send Packet" 
                                            Command="{Binding SendPacketCommand}" 
                                            Padding="10,5" 
                                            Background="LightBlue"
                                            FontWeight="Bold"/>
                                </Grid>

                                <TextBlock Text="No fields to configure" FontStyle="Italic" Foreground="Gray">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Fields.Count}" Value="0">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <ItemsControl ItemsSource="{Binding Fields}" Margin="0,5,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="LightGray" BorderThickness="1" Margin="0,3" Padding="10">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Field: " FontWeight="Bold" Margin="0,0,10,3"/>
                                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Margin="0,0,0,3"/>

                                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Type: " FontWeight="Bold" Margin="0,0,10,3"/>
                                                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,3">
                                                        <TextBlock Text="{Binding Type}" Foreground="Gray"/>
                                                        <TextBlock Text=" (Array)" Foreground="Orange" FontWeight="Bold" Margin="5,0,0,0">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsArray}" Value="True">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- 배열이 아닌 경우 -->
                                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Value: " FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsArray}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <TextBox Grid.Row="2" Grid.Column="1" 
                                                             Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                                             Padding="5"
                                                             FontFamily="Consolas"
                                                             IsReadOnly="{Binding IsReadOnly}">
                                                        <TextBox.Style>
                                                            <Style TargetType="TextBox">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsArray}" Value="True">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                                        <Setter Property="Foreground" Value="#666666"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBox.Style>
                                                    </TextBox>

                                                    <!-- 배열인 경우 -->
                                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Array: " FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Top">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsArray}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                    <StackPanel Grid.Row="2" Grid.Column="1">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsArray}" Value="True">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                                                 Padding="5"
                                                                 FontFamily="Consolas"
                                                                 MinHeight="60"
                                                                 AcceptsReturn="True"
                                                                 TextWrapping="Wrap"
                                                                 IsReadOnly="{Binding IsReadOnly}">
                                                            <TextBox.Style>
                                                                <Style TargetType="TextBox">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsReadOnly}" Value="True">
                                                                            <Setter Property="Background" Value="#F0F0F0"/>
                                                                            <Setter Property="Foreground" Value="#666666"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBox.Style>
                                                        </TextBox>
                                                        <TextBlock Text="Format: [value1, value2, value3] or [&quot;string1&quot;, &quot;string2&quot;]" 
                                                                   FontSize="10" 
                                                                   Foreground="Gray" 
                                                                   Margin="0,2,0,0"
                                                                   TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </DockPanel>

        <!-- 수평 구분선 -->
        <GridSplitter Grid.Row="1" Grid.ColumnSpan="3" Height="5" HorizontalAlignment="Stretch" Background="LightGray"/>

        <!-- 로그 패널 (새로 추가된 부분) -->
        <DockPanel Grid.Row="2" Grid.ColumnSpan="3">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5" Background="#f8f8f8">
                <TextBlock Text="📋 Packet Send Log" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="5"/>
                <Button Content="Clear Log" Margin="10,3,0,3" Padding="8,3" Command="{Binding ClearLogCommand}"
                        Background="LightCoral" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="|" Margin="10,0" VerticalAlignment="Center" Foreground="Gray"/>
                <TextBlock Text="Real-time packet transmission monitoring" FontSize="11" VerticalAlignment="Center" Foreground="Gray"/>
            </StackPanel>
            <Border BorderBrush="Gray" BorderThickness="1" Margin="5">
                <ScrollViewer Name="LogScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding LogText}" 
                             IsReadOnly="True" 
                             FontFamily="Consolas" 
                             FontSize="11"
                             Background="#1e1e1e"
                             Foreground="#00ff00"
                             BorderThickness="0"
                             TextWrapping="NoWrap"
                             Padding="10"
                             ScrollViewer.CanContentScroll="True">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding LogText}" Value="">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="Foreground" Value="Gray"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </ScrollViewer>
            </Border>
        </DockPanel>
    </Grid>
</Window>